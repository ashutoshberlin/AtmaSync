{
  "manifest_version": 3,

  "name": "AtmaSync: AI Sync Engine",
  "description": "Carry your brain and consciousness across the AI universe. Sync your persona across ChatGPT, Claude, and more.",
  "version": "0.1.0",
  "author": "Ashutosh Tripathi",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon32.png",
      "128": "icons/icon32.png"
    }
  },

  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "https://claude.ai/*"
  ],

  "web_accessible_resources": [
    {
      "resources": [ "user-brain.json" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["dist/chagpt_persona.bundle.js", "dist/chatgpt-injector.bundle.js"]
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": ["dist/claude_persona.bundle.js", "dist/claude-injector.bundle.js"]
    }
  ]
}
